@charset "UTF-8";

* {
      box-sizing: border-box;
    }
    
body {
	font-family: initial !important;
	font-style: inital !important;
}
    
.container h5 {
    font-size: 25px;
    font-weight: bold;
    border-bottom: 2px solid #5c7cfa;
    padding-bottom: 10px;
    color: #343a40;
}

/* /////// 사이드 /////// */
#side {
	position: fixed;
	height: 100vh; /* 화면 전체 높이 */
    width: 200px;
    background-color: #1a1a1a;
    color: #fff;
    padding: 20px;
    box-sizing: border-box;
}

#side h3 {
    margin-top: 0;
    font-size: 20px;
    line-height: 1.5;
    margin-bottom: 20px;
}

#side ul {
    list-style: none;
    padding: 0;
}

#side ul li {
    margin-bottom: 10px;
}

#side ul li a {
    color: #ccc;
    text-decoration: none;
    display: block;
    padding: 5px 10px;
    border-radius: 4px;
}

#side ul li.active a,
#side ul li a:hover {
    background-color: #444;
    color: #fff;
}
/* ///////////////////// */


    /* 테이블 스타일 */
.table th {
    background-color: #f1f3f5;
    color: #343a40;
    font-weight: 600;
    text-align: center;
}

.table td {
    vertical-align: middle;
    text-align: center;
    font-size: 14px;
}

/* 제목 컬럼은 왼쪽 정렬 */
.table td:nth-child(2) {
    text-align: left;
}

/* 링크 스타일 */
.table td a {
    color: #212529;
    text-decoration: none;
}

.table td a:hover {
    text-decoration: underline;
    color: #5c7cfa;
}

/* 문의 작성 버튼 스타일 */
.btn-primary {
    background-color: #5c7cfa;
    border-color: #5c7cfa;
}

.btn-primary:hover {
    background-color: #4c6ef5;
    border-color: #4c6ef5;
}

/* 상태 뱃지 */
.badge {
    font-size: 13px;
    padding: 5px 10px;
    border-radius: 10px;
}

/* 페이지 전체 여백 조절 */
.container {
    padding-top: 40px;
    padding-bottom: 60px;
}
